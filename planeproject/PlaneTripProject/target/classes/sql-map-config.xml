<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE configuration
	PUBLIC "-//mybatis.org//DTD config 3.0//EN"
	"http://mybatis.org/dtd/mybatis-3-config.dtd">

<configuration>
	<!-- 쿼리문의 결과로 오는 컬럼이름을 카멜케이스로 변경 -->
	<settings>
		<setting name="mapUnderscoreToCamelCase" value="true"></setting>
	</settings>
	
	<!-- VO객체들 별칭 지정 -->
	<typeAliases>
		<typeAlias type="com.ezen.springplanetrip.vo.PassengerVO" alias="passenger"></typeAlias>
		<typeAlias type="com.ezen.springplanetrip.vo.FlightVO" alias="flight"></typeAlias>
		<typeAlias type="com.ezen.springplanetrip.vo.BoardVO" alias="board"></typeAlias>
		<typeAlias type="com.ezen.springplanetrip.vo.AirportVO" alias="airport"></typeAlias>
		<typeAlias type="com.ezen.springplanetrip.vo.UserVO" alias="user"></typeAlias>
		<typeAlias type="com.ezen.springplanetrip.vo.SeatVO" alias="seat"></typeAlias>
		<typeAlias type="com.ezen.springplanetrip.common.CamelHashMap" alias="camelHashMap"/>
		<typeAlias type="com.ezen.springplanetrip.vo.AirportVO" alias="airport"></typeAlias>
		<typeAlias type="com.ezen.springplanetrip.vo.ReservationVO" alias="reservation"></typeAlias>
	</typeAliases>
	
	<!-- 사용할 SQL 매퍼 위치 지정 -->
	<mappers>
		<mapper resource="mappings/passenger-mapper.xml"></mapper>
		<mapper resource="mappings/home-mapper.xml"></mapper>
		<mapper resource="mappings/account-mapper.xml"></mapper>
		<mapper resource="mappings/flight-mapper.xml"></mapper>
		<mapper resource="mappings/board-mapper.xml"></mapper>
		<mapper resource="mappings/seat-mapper.xml"></mapper>
		<mapper resource="mappings/passenger-mapper.xml"></mapper>
		<mapper resource="mappings/airport-mapper.xml"></mapper>
		<mapper resource="mappings/reservation-mapper.xml"></mapper>
	</mappers>
	
</configuration>